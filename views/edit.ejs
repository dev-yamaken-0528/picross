<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width,initial-scale=1'>
    <title>ピクロス</title>
    <link rel='stylesheet' href='/stylesheets/normalize.css'>
    <link rel='stylesheet' href='/stylesheets/style.css'>
  </head>
  <body>
    <div id="app">
      <input type="hidden" id="loaddata" value="<%= loaddata %>">
      <input type="hidden" id="loadsize" value="<%= loadsize %>">
      
      <h1>編集[<%= id %>]</h1>

      <table class="square_table">
        <tr v-for="(row,rowindex) in loaddata">
          <td v-for="(cell,colindex) in row" :id="(rowindex+'_'+colindex)" @click="clickCell(rowindex, colindex)" class="square_td"></td>
        </tr>
      </table>

      <form action="/edit/save" method="post">
        <input type="hidden" id="filename" name="filename" value="<%= id %>">
        <input type="hidden" id="size" name="size" value="<%= loadsize %>">
        <input type="hidden" id="savedata" name="savedata">
        <input type="submit" value="保存">
      </form>      

      <p><a href="/">HOME</a></p>

    </div>
  </body>
  <script src="/javascripts/vue.min.js"></script>
  <script src="/javascripts/edit.js"></script>
</html>
